---
interface Props {
	key: number;
	id: number;
	title: string;
	poster: string;
	genres: string[];
}

const { id, title, poster, genres } = Astro.props;
---

<a
	class="shadow-md py-7 px-5 flex flex-col rounded-md cursor-pointer transition-all hover:scale-105"
	href={`/movie/${id}`}
>
	<img
		src={import.meta.env.PUBLIC_IMAGES_BASE_URL + poster}
		alt=""
		class="w-32 mx-auto"
		transition:name={`img-${id}`}
	/>
	<div class="mt-4">
		<h3 class="font-bold" transition:name={`title-${id}`}>{title}</h3>
		<div class="mt-3 flex gap-2 flex-wrap" transition:name={`genres-${id}`}>
			{
				genres.map((genre) => (
					<span class="bg-gray-200 text-gray-700 px-2 py-1 rounded-xl text-xs">{genre}</span>
				))
			}
		</div>
	</div>
</a>
